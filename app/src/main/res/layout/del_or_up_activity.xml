<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="@dimen/standart_padding">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                <DatePicker android:id="@+id/date_update" android:layout_width="wrap_content" android:layout_height="wrap_content"></DatePicker>
                <TimePicker android:id="@+id/time_update" android:layout_width="wrap_content" android:layout_height="wrap_content"></TimePicker>
            <TextView android:text="@string/title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/title_update_event" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:text="@string/place" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/location_update_event" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:text="@string/description" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/description_update_event" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <Button
                        android:text="@string/delete_event_but"
                android:id="@+id/delete_event" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <Button android:text="@string/update_event" android:id="@+id/update_button" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>